<div class="container">

    <div class="row">

        <h2>{{name}}</h2>

        <table class="table table-striped">

            <thead>
                <tr>
                    <td><strong>Name</strong></td>
                    <td><strong>Size (B)</strong></td>
                    <td><strong>Uploaded (UTC)</strong></td>
                    <td><strong>Link</strong></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{#link-to 'document' this}}{{name}}{{/link-to}}</td>
                    <td>{{size}}</td>
                    <td>{{uploaded}}</td>
                    <td><a {{bind-attr href=path}}>Download</a></td>
                </tr>
            </tbody>
        </table>

    </div>

</div>
